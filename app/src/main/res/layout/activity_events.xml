<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFE8ED"
    tools:context=".Events"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/takhleeq"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_weight="6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/artsSociety"
            android:clickable="true"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:background="@drawable/round_background1"
            android:gravity="center_vertical"
            android:text="  Arts Society"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daramaSociety"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:background="@drawable/round_background1"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:text="  Darama Society"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/musicSociety"
            android:clickable="true"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:background="@drawable/round_background1"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Music Society"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/debateSociety"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/round_background1"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="   Debate Society"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>